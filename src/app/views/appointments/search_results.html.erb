<% provide(:title, "Search Results") %>



<div style="height: 30px;"></div>
<div class="d-flex justify-content-between">
  <h1>Results</h1>

  <a href="<%= admin_search_path %>" class="rounded">
    <button class="btn btn-primary h-100"> New Search </button>
  </a>
</div>

<% declare_my_appointment_array( ) %>

<% if !@filtered_appointments.empty? %>
    <% @filtered_appointments.each do |appointment| %>
        <ul style="list-style-type: none; padding: 0;" ></ul>
            <% store_current_appointment( appointment ) %>
            <%= render partial: "appointments/admin_check_in", locals: { current_date: @today, from_search: true, query_data: @query_params  } %>
        </ul>
    <% end %>
<% else %>
    <p>No appointments found with filters given.</p>
<% end%>