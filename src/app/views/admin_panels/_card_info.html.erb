<% admin_panel = get_card( ) %>


<ul class="list-group list-group-flush">
                
    <li class="list-group-item d-flex justify-content-between align-items-center">
        Appointment Block (minutes):
        <span class="badge badge-pill"><%= admin_panel.appointment_length %></span>
    </li>
    
    <li class="list-group-item d-flex justify-content-between align-items-center">
        Person per Block:
        <span class="badge badge-pill"><%= admin_panel.max_appointment_count %></span>
    </li>
    
    <li class="list-group-item d-flex justify-content-between align-items-center">
        Day(s) of Event:
        <span class="badge badge-pill"><%= admin_panel.booking_days.reject { |day| day == '0' }.join(', ') %></span>
    </li>
    
    <li class="list-group-item d-flex justify-content-between align-items-center">
        Start/End Time:
        <span class="badge badge-pill"><%= admin_panel.start_time.strftime('%I:%M %p') %> - <%= admin_panel.end_time.strftime('%I:%M %p') %></span>
    </li>
    
    <li class="list-group-item d-flex justify-content-between align-items-center">
        Start Date:
        <span class="badge badge-pill"><%= admin_panel.start_date.strftime('%m-%d-%Y') %></span>
    </li>
    
    <li class="list-group-item d-flex justify-content-between align-items-center">
        End Date:
        <span class="badge badge-pill"><%= admin_panel.end_date.strftime('%m-%d-%Y') %></span>
    </li>
    
    <li class="list-group-item d-flex justify-content-between align-items-center">
        Location(s):
        <span class="badge badge-pill"><%= admin_panel.location.reject { |day| day == '0' }.join(', ') %></span>
    </li>
    
    <li class="list-group-item d-flex justify-content-between align-items-center">
        Reservations count:
        <span class="badge badge-pill"><%= reservation_count( admin_panel.id ) %></span>
    </li>

</ul>