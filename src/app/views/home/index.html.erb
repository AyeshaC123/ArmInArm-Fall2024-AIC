<style>
  .main-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 90vh;
  }
</style>
<div class="main-container">
  <div class="row mx-auto">
    <%= image_tag 'image.png', id: 'my-element', alt: 'Arm in Arm' %>
  </div>
  <div class="text-center" style="padding-bottom: 100px">
   <h2 style="color: dark grey;">Client Profile Registration and Search Portal</h2>

  </div>
  <div class="row">
    <div class="mx-auto">
      <% if not current_user.nil? %>
        <% if current_user.can_create_other_client_profiles? %>
          <a href="/new_client" class="btn btn-primary">Create Client Profile</a>
        <% end %>
        <% if not current_user.client.nil? %>
          <a href="/my_client" class="btn btn-primary">View or modify your Client Profile</a>
        <% end %>
        <% if current_user.can_search? %>
          <a href="/search" class="btn btn-primary">Search</a>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
