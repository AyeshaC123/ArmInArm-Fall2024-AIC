<h1>Schedule Generator</h1>

<%= form_with url: show_schedule_path, method: :get, local: true do |form| %>
  <div>
    <%= form.label :location, 'Choose Location:' %>
    <%= form.select :location, ['Trenton', 'Princeton', 'Mobile'], {}, { class: 'form-control', required: true } %>
  </div>

  <div>
    <%= form.label :date, 'Select Date:' %>
    <%= form.date_field :date, required: true, class: 'form-control' %>
  </div>

  <div>
    <%= form.submit 'Show Schedule', class: 'btn btn-primary' %>
  </div>
<% end %>
