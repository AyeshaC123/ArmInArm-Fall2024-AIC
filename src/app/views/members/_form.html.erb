<%= form_with(model: member, local: true) do |form| %>
  <% if member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
        <% member.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label nil, "First Name" %>
    <%= form.text_field :firstname %>
  </div>

  <div class="field">
    <%= form.label nil, "Last Name" %>
    <%= form.text_field :lastname %>
  </div>

  <div class="field">
    <%= form.label nil, "Date of birth" %>
    <%= form.date_select :dob %>
  </div>

  <div class="field">
    <%= form.label nil, "Relationship to Head" %>
    <%= form.text_field :relationship %>
  </div>

  <div class="field">
    <%= form.label nil, "Household ID"%>
    <%= form.text_field :household_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
